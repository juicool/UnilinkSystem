            <Label fx:id="replyLabel">
               <HBox.margin>
                  <Insets left="80.0" top="30.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="replyTextField">
               <HBox.margin>
                  <Insets left="20.0" top="30.0" />
